{
  "name": "my-podcaster",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others 'reflect dev --silence-startup-message' 'PUBLIC_REFLECT_URL=http://127.0.0.1:8080/ astro dev'",
    "start": "astro dev",
    "build": "astro build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "preview": "wrangler pages dev ./dist",
    "deploy": "reflect publish --app=podcaster",
    "astro": "astro",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^9.1.0",
    "@astrojs/react": "^3.1.0",
    "@astrojs/tailwind": "^5.1.0",
    "@nanostores/react": "^0.7.2",
    "@rocicorp/rails": "^0.10.0",
    "@rocicorp/reflect": "^0.39.202402230127+b70f6b",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "astro": "^4.5.5",
    "nanoid": "^5.0.6",
    "nanostores": "^0.10.0",
    "p-retry": "^6.2.0",
    "partysocket": "*",
    "react": "^18.2.0",
    "react-aria-components": "^1.1.1",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nanoid": "^5.0.6",
    "partykit": "^0.0.99",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "tailwindcss-react-aria-components": "^1.1.1",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css,md,json,astro}": "prettier --write"
  }
}
