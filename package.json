{
  "name": "my-podcaster",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others 'reflect dev --silence-startup-message' 'VITE_REFLECT_URL=http://127.0.0.1:8080/ vite'",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "preview": "wrangler pages dev ./dist",
    "deploy": "reflect publish --app=podcaster",
    "usage": "reflect usage --app=podcaster",
    "prepare": "husky"
  },
  "dependencies": {
    "@nanostores/react": "^0.7.2",
    "@rocicorp/rails": "^0.10.0",
    "@rocicorp/reflect": "^0.39.202402230127+b70f6b",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "nanoid": "^5.0.6",
    "nanostores": "^0.10.0",
    "p-retry": "^6.2.0",
    "partysocket": "*",
    "react": "^18.2.0",
    "react-aria-components": "^1.1.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "ts-invariant": "^0.10.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nanoid": "^5.0.6",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-react-aria-components": "^1.1.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.3",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,cjs,mjs,css,md,json,astro}": "prettier --write"
  }
}
