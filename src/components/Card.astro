---
type Props = {
  id: string;
  title: string;
  author: string;
  image: string;
};

const { id, title, author, image } = Astro.props;
---

<div class="flex flex-col">
  <a
    href={`/podcast/${id}`}
    class="text-black hover:text-pink-700 focus-visible:ring-2 focus:outline-none focus:ring-black"
  >
    <div
      class="shadow-md hover:shadow-lg relative"
      transition:name={`podcast-${id}`}
    >
      <img
        class="card-image rounded-md relative z-10"
        src={image}
        alt=""
        aria-hidden="true"
        width="400"
        height="400"
      />
      <img
        src="/vynil-lp.webp"
        alt=""
        width="400"
        height="400"
        transition:name={`vinyl-${id}`}
        class="absolute top-0 vynil-image opacity-0"
        aria-hidden="true"
      />
    </div>
    <div class="pt-4 font-semibold">{title}</div>
    <span class="sr-only"> by</span>
    <div class="pt-1 text-gray-700">{author}</div>
  </a>
</div>
